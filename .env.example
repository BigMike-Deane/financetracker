# Finance Tracker Configuration
# Copy this file to .env and fill in your values

# App Settings
SECRET_KEY=generate-a-random-secret-key-here
DEBUG=true

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# Authentication (required for production)
# Set these to secure your finance data
AUTH_USERNAME=admin
AUTH_PASSWORD=change-this-secure-password

# Allowed origins for CORS (comma-separated)
# Example: https://finance.yourdomain.com,https://100.x.x.x:8000
CORS_ORIGINS=

# Timezone for scheduled syncs (default: system timezone)
# Examples: America/New_York, America/Chicago, America/Los_Angeles, Europe/London
TZ=America/Chicago

# Note: SimpleFIN authentication is handled through the app UI
# Users enter their SimpleFIN setup token directly in Settings
# No API keys needed in environment variables
